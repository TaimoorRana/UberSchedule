<!--title of the page & subtitle div-->
<div class="titleCont">
  <br/><br/>
  <span class="whiteFONT titleFONT">
    Available Courses></span><br/>
  <span class="whiteFONT subtitleFONT"></span>
</div>
</div>

<!--main outer container div-->
<div class="whiteBCKG extend">
  <!-- inside container div-->
  <div class="mainContent">

    <div class="greybody">
      <table class="table">
        <tr class="">
          <th>Course Department</th>
          <th>Course Code</th>
          <th>Course Name</th>
          <th></th>
        </tr>
        <%= paginate @courses %>
        <% @courses.each do |course| %>
            <tr class="">
              <td><%= course.dept %></td>
              <td><%= course.number %></td>
              <td><%= course.name %></td>
              <td><%= link_to('Add', {:controller => 'student', :action => 'add_course', :id => course.id}) %></td>
              <td><%= link_to('Details', {:controller => 'Course', :action => 'show', :id => course.id}) %></td>
            </tr>
        <% end %>
      </table>
    </div>


  </div>
</div>