<table border="0px">
  <tr>
    <th>Time</th> <th>Monday</th> <th>Tuesday</th> <th>Wednesday</th> <th>Thursday</th> <th>Friday</th>
  </tr>
  <% x = Time.local(2015,'jan',15,8,0,0) %>
  <% (0..64).each do |i|%>
      <% if (x.min == 0) then minutes = '00' else minutes = "#{x.min}" end %>
      <% time= "#{(x += 900).hour}:#{minutes}" %>
  <tr>
    <td> <%= time %> </td>

      <% @mondaySections.each  do |section| %>
        <% if section.time_start == time %>
           <% @section_found = section %>
          <% end %>
      <% end %>

        <% if @section_found != nil %>
        <td rowspan="3" style="background-color: crimson; border-bottom: none" ><%= @section_found.name %></td>
        <% @section_found = nil %>
        <% else %>
        <td></td>
        <% end %>

    <% @tuesdaySections.each  do |section| %>
        <% if section.time_start == time %>
            <% @section_found = section %>
        <% end %>
    <% end %>

    <% if @section_found != nil %>
        <td rowspan="3" style="background-color: burlywood; border-bottom: none" ><%= @section_found.name %></td>
        <% @section_found = nil %>
    <% else %>
        <td></td>
    <% end %>


    <% @wednesdaySections.each  do |section| %>
        <% if section.time_start == time %>
