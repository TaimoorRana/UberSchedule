        <% end %>
    <% end %>

    <% if @section_found != nil %>
        <td rowspan="3" style=" background-color: aqua; border-bottom: none" ><%= @section_found.name %></td>
        <% @section_found = nil %>
    <% else %>
        <td></td>
    <% end %>



    <% @thursdaySections.each  do |section| %>
        <% if section.time_start == time %>
            <% @section_found = section %>
        <% end %>
    <% end %>

    <% if @section_found != nil %>
        <td rowspan="3" style="background-color: chartreuse; border-bottom: none" ><%= @section_found.name %></td>
        <% @section_found = nil %>
    <% else %>
        <td></td>
    <% end %>




    <% @fridaySections.each  do |section| %>
        <% if section.time_start == time %>
            <% @section_found = section %>
        <% end %>
    <% end %>

    <% if @section_found != nil %>
        <td rowspan="3" style="background-color: darkmagenta; border-bottom: none" ><%= @section_found.name %></td>
        <% @section_found = nil %>
    <% else %>
        <td></td>
    <% end %>
  </tr>
  <% end %>
</table>







